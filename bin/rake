#!/usr/bin/env ruby
# frozen_string_literal: true

require 'open3'

def docker_compose_exists?
  system('which docker-compose > /dev/null 2>&1')
end

def execute_command(command)
  load(command)
rescue LoadError
  puts "Error: Unable to load #{command}"
  exit(1)
end

if docker_compose_exists?
  system("docker-compose run rails bin/ruby/rake #{ARGV.join(' ')}")
else
  execute_command('bin/ruby/rake')
end
